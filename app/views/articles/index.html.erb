<h1>Listing Articles</h1>
<%= link_to 'Add new Article', new_article_path %>
<br><br>
<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
        </tr>
    <% end %>
</table>